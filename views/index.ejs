<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>首页</title>
</head>
<link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="/stylesheets/common.css">
<link rel="stylesheet" href="/stylesheets/swiper-3.4.2.min.css">

<style>
	.more{
		padding: 10px 0;
	}

	.swiper-container {
	    width: 1140px;
	    height: 300px;
	}  

	.banner-image{
		width:1140px
	}
</style>
<body>
	<%- include("./header.ejs") %>
	<div class="container">
		<div class="swiper-container">
		    <div class="swiper-wrapper">
		        <div class="swiper-slide">
		        	<img class="banner-image" style="display:block;margin:0 auto;width:800px;height:300px;" src="/images/banner/banner1.jpg" title=""/>    
		        </div>
		        <div class="swiper-slide">
		        	<img class="banner-image" style="display:block;margin:0 auto;width:800px;height:300px;" src="/images/banner/banner2.jpg" title=""/>    
		        </div>
		    </div>
		    <!-- 如果需要分页器 -->
		    <!-- <div class="swiper-pagination"></div> -->
		    
		    <!-- 如果需要导航按钮 -->
		    <div class="swiper-button-prev"><</div>
		    <div class="swiper-button-next">></div>
		    
		</div>
	</div>
	
	<div class="container">
		<div class="more clearfix">
			<a href="/goods/list" class="btn btn-info bnt-lg pull-right">查看更多</a>
		</div>
		<div class="row">
		  <% goods.forEach(function(good,i){ %>
	            <div class="col-xs-12 col-md-6 col-lg-3">
	                <div class="thumbnail">
	                	<a href="/goods/detail?goodid=<%= good.goodsId %>">
	                    	<img class="good_img" tite="<%= good.description %>" src="<%= good.imgsrc %>" alt="...">
	                    </a>
	                    <div class="caption">
	                        <h3><%= good.tt %></h3>
	                        <p class="clearfix">
	                        	<button class="btn btn-danger pull-left" role="button">￥<%= good.price %></button>
								
	                        </p>
	                        <p class="clearfix">
	                        	<%- include("./addcart.ejs") %>
	                   
	                            <button data-id="<%= good.goodId %>" id='addCart' class="btn btn-primary pull-right buy-btn" role="button">加入购物车</button>
	                        </p>
	                    </div>
	                </div>
	            </div>
	            
	        <% }) %>
		</div>
	</div>
	<%- include("./bottom.ejs") %>
	
	
	<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script><script src='https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js'></script>
	<script src='/javascripts/jquery.cookie.js'></script>
	<script src='/javascripts/swiper-3.4.2.jquery.min.js'></script>
	
	<script src='/javascripts/test.js'></script>
	<script src='/javascripts/add.js'></script>
	<script>

		
		initSwiper()

		function initSwiper(){
		    var mySwiper = new Swiper ('.swiper-container', {
		    	autoplay:2000,
		        direction:"horizontal",
		        loop: true,                
		        // 如果需要分页器
		        pagination: '.swiper-pagination',                
		        // 如果需要前进后退按钮
		        nextButton: '.swiper-button-next',
		        prevButton: '.swiper-button-prev',
		    })      
		}
	</script>
</body>
</html>